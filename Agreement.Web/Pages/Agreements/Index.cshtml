<h2>Agreements</h2>

<table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.dtoAgremment[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.dtoAgremment[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.dtoAgremment[0].Amount)
                </th>
            </tr>
